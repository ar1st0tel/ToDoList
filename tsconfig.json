{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["@types/node", "@testing-library/jest-dom", "@types/react"],
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "paths": {
      "*.scss": ["src/*"]
    }
  },
  "declaration": false,
  "outDir": "./dist",
  "esModuleInterop": true,
  "skipLibCheck": true,
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.scss",
    "src/__mocks__"
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}